/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "resolveJsonModule": true,
    "outDir": "./out-tsc/app",
    "types": [
      "node"
    ],
    "paths": {
      "@src/*": ["./src/*"],
      "@app/*": ["./src/app/*"],
      "@core/*": ["./src/app/core/*"],
      "@presentation/*": ["./src/app/presentation/*"],
      "@base/*": ["./src/app/base/*"],
      "@shared/*": ["./src/app/shared/*"],
      "@composite/*": ["./src/app/composite/*"]
    }
  },
  "angularCompilerOptions": {
    "enableIvy": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "exclude": [
    "src/test.ts",
    "src/**/**.spec.ts"
  ]
}
